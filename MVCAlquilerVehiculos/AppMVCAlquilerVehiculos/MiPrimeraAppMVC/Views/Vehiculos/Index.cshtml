
@{
    ViewData["Title"] = "Index";
}

<h1>Vehiculos</h1>

<div class="input-group">
    <input id="txtVehiculos" type="text" class="form-control" onkeyup="filtarVehiculos()" placeholder="Ingresar tipo medicamento a buscar" aria-label="Recipient's username with two button addons">
    
</div>

<fieldset>
    <legend>Guardar Datos</legend>
    <form id="frmGuardarVehiculos" class="row g-3">
        <div class="col-md-6">
            <label for="idVehiculo" class="form-label">Id</label>
            <input type="text" class="form-control" name="idVehiculo" id="idVehiculo">
        </div>
        <div class="col-md-6">
            <label for="marca" class="form-label">Marca</label>
            <input type="text" class="form-control" name="marca" id="marca">
        </div>
        <div class="col-12">
            <label for="modelo" class="form-label">Modelo</label>
            <input type="text" class="form-control" id="modelo" name="modelo" placeholder="Modelo">
        </div>
        <div class="col-md-6">
            <label for="anio" class="form-label">Año</label>
            <input type="text" class="form-control" name="anio" id="anio">
        </div>
        <div class="col-12">
            <label for="precio" class="form-label">Precio</label>
            <input type="text" class="form-control" id="precio" name="precio" placeholder="precio">
        </div>        
        <div class="col-12">
            <label for="estado" class="form-label">Estado</label>
            <input type="text" class="form-control" id="estado" name="estado" placeholder="estado">
        </div>
    </form>

   <div class="row g-3">
        <div class="d-grid gap-2">
            <button type="button" class="btn btn-primary" onclick="GuardarVehiculos()" id="buttonGuardar">Guardar</button>
            <button type="button" class="btn btn-danger" onclick="LimpiarVehiculos()">Limpiar</button>
        </div>
   </div>

    

</fieldset>

<div id="divTable">

</div>

<script src="~/js/generico.js"></script>
<script src="~/js/vehiculos.js"></script>