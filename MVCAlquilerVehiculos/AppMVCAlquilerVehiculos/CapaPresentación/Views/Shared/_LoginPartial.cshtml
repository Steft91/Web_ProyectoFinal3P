@using Microsoft.AspNetCore.Identity
@using CapaEntidad

@inject SignInManager<UsuarioCLS> SignInManager
@inject UserManager<UsuarioCLS> UserManager


@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Empleado"))
    {
        <li class="nav-item"><a asp-area="" asp-controller="Vehiculo" asp-action="Index" class="nav-link">Vehículo</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Cliente" asp-action="Index" class="nav-link">Cliente</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Reserva" asp-action="Index" class="nav-link">Reserva</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Pago" asp-action="Index" class="nav-link">Pago</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Seguro" asp-action="Index" class="nav-link">Seguro</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Empleado" asp-action="Index" class="nav-link">Empleado</a></li>
    }
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Cerrar sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
