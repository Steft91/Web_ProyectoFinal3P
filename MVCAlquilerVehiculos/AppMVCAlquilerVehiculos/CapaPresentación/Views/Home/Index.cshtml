@using Microsoft.AspNetCore.Identity
@using CapaEntidad

@inject SignInManager<UsuarioCLS> SignInManager
@inject UserManager<UsuarioCLS> UserManager

@{
    ViewData["Title"] = "Home Page";
    var hoy = DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="hero-wrap ftco-degree-bg" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text justify-content-start align-items-center justify-content-center">
            <div class="col-lg-8 ftco-animate">
                <div class="text w-100 text-center mb-md-5 pb-md-5">
                    <h1 class="mb-4">La manera más Fácil de Rentar un Auto</h1>
                    <p style="font-size: 18px;">Alquila el auto perfecto para tu próximo viaje, con una amplia selección de vehículos, tarifas competitivas y un servicio rápido y confiable. ¡La libertad de moverte está a solo un clic!</p>
                    <a href="https://vimeo.com/45830194" class="icon-wrap popup-vimeo d-flex align-items-center mt-4 justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="ion-ios-play"></span>
                        </div>
                        <div class="heading-title ml-5">
                            <span>Por qué rentar con nosotros</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12	featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center">
                        <form class="request-form ftco-animate bg-primary" id="form-reserva">
                            <h2>Reserva ya!</h2>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                @if (ViewData["cliente"] != null)
                                {
                                    <div class="form-group">
                                        <label for="nombre" class="label">Nombre</label>
                                        <input type="text" value='@ViewData["clienteNombre"]' name="nombre" class="form-control" placeholder="Ingrese su nombre..." required readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="apellido" class="label">Apellido</label>
                                        <input type="text" value='@ViewData["clienteApellido"]' name="apellido" class="form-control" placeholder="Ingrese su apellido..." required readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="telefono" class="label">Teléfono</label>
                                        <input type="tel" value='@ViewData["clienteTelefono"]' name="telefono" class="form-control" placeholder="Ingrese su teléfono..." required readonly>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="nombre" class="label">Nombre</label>
                                        <input type="text" name="nombre" class="form-control" placeholder="Ingrese su nombre..." required>
                                    </div>
                                    <div class="form-group">
                                        <label for="apellido" class="label">Apellido</label>
                                        <input type="text" name="apellido" class="form-control" placeholder="Ingrese su apellido..." required>
                                    </div>
                                    <div class="form-group">
                                        <label for="telefono" class="label">Teléfono</label>
                                        <input type="tel" name="telefono" class="form-control" placeholder="Ingrese su teléfono..." required>
                                    </div>
                                }
                                <div class="form-group">
                                    <label for="email" class="label">E-mail</label>
                                    <input type="email" name="email" value="@UserManager.GetUserName(User)" class="form-control" placeholder="Ingrese su correo electrónico..." required readonly>
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="fechaInicio" class="label">Fecha inicio</label>
                                        <input type="date" name="fechaInicio" class="form-control" min="@hoy" required>"
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="fechaFin" class="label">Fecha fin</label>
                                        <input type="date" name="fechaFin" class="form-control" min="@hoy" required>"
                                    </div>
                                </div>

                                <div class="form-group">
                                    <a href="#vehiculos-disponibles" class="btn btn-secondary py-3 px-4">Escoge tu auto</a>
                                </div>
                            } else
                            {
                                <div class="form-group ml-2">
                                    <label for="" class="label">Inicia sesión o regístrate para rentar un auto</label>
                                </div>
                                <div class="form-group">
                                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary py-3 px-4">Iniciar sesión</a>
                                </div>
                                <div class="form-group">
                                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark py-3 px-4">Registrarse</a>
                                </div>
                            }
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Somos tu mejor opción</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Te lo dejamos en tu puerta</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Precios competitivos</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Servicio garantizado</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="#form-reserva" class="btn btn-primary py-3 px-4">Reserva ya</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>


